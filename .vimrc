"set up colors
set t_Co=256
set t_ut=
colorscheme wal
"colorscheme codedark

"syntax highlighting and tabs
syntax enable
set tabstop=4
set softtabstop=4
set expandtab

"show line numbers
set number

"show last command in bottom bar
set showcmd

"highlight current line
set cursorline

"load filetype specific indent files
filetype indent on

"highlight matching for brackets [{()}]
set showmatch

"turn on visual autocomplete for command menu
set wildmenu
